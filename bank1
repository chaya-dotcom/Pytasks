# bank system using OOP

class BankAccount:

    # constructor
    def __init__(self, name, balance):
        self.name = name
        self.balance = balance

    # create account
    def create_account(self):
        print("\nAccount Created")
        print("Name:", self.name)
        print("Opening Balance:", self.balance)

    # deposit
    def deposit(self, amount):
        self.balance += amount
        print("Deposited:", amount)

    # withdraw
    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount
            print("Withdrawn:", amount)
        else:
            print("Low balance")

    # show balance
    def show_balance(self):
        print("Balance:", self.balance)


# child class
class SavingsAccount(BankAccount):

    # override
    def show_balance(self):
        print("Savings Balance:", self.balance)


# first account
name1 = input("Enter first name: ")
bal1 = float(input("Enter opening balance: "))

acc1 = BankAccount(name1, bal1)
acc1.create_account()

dep1 = float(input("Deposit amount: "))
acc1.deposit(dep1)

wd1 = float(input("Withdraw amount: "))
acc1.withdraw(wd1)

acc1.show_balance()


print("\n-----------------\n")


# second account
name2 = input("Enter second name: ")
bal2 = float(input("Enter opening balance: "))

acc2 = SavingsAccount(name2, bal2)
acc2.create_account()

dep2 = float(input("Deposit amount: "))
acc2.deposit(dep2)

wd2 = float(input("Withdraw amount: "))
acc2.withdraw(wd2)

acc2.show_balance()
